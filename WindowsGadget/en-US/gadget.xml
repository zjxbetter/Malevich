<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <!-- The name will appear on the Gadget Tile and settings window -->
  <name>Malevich Code Review</name>
  <namespace>Msg</namespace>
  <version>1.0.0.0</version>
  <author name="Shawn Lucas">
    <info url="http://sergeysomsg2/malevich" />
    <!-- The logo file will display on the more details window of the Gadget Tile window -->
    <logo src="logo.png" />
  </author>
  <copyright>&#169; Microsoft Corporation 2009</copyright>
  <!-- The description displays in the Gadget Tile window when the Gadget is selected -->
  <description>A gadget that shows number of open requests/responses for you in the Malevich code review tool</description>
  <icons>
    <icon height="48" width="48" src="icon.png" />
  </icons>
  <hosts>
    <host name="sidebar">
      <base type="HTML" apiVersion="1.0.0" src="Malevich.html" />
      <permissions>Full</permissions>
      <platform minPlatformVersion="1.0" />
      <defaultImage src="drag.png" />
    </host>
  </hosts>
</gadget>